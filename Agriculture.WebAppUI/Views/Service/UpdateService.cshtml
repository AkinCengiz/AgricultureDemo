@model Agriculture.Entities.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Güncelleme Paneli</h4>
            <form method="post" class="forms-sample">
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.Label("ID")
                        <span asp-validation-for="ServiceId" class="text-danger"></span>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" asp-for="ServiceId" class="form-control" id="exampleInputUsername2">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.Label("Başlık")
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Title" class="form-control" id="exampleInputUsername2">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.Label("Açıklama")
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-sm-9">
                        <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.Label("Görsel")
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Image" class="form-control" id="exampleInputUsername2">
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-warning me-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>