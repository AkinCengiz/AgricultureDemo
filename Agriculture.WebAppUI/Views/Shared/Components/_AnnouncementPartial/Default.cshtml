@using Agriculture.Entities.Concrete
@model List<Announcement>

<div class="blog" id="blog">
    <div class="container">
        <h3 class="tittle">Son Gelişmeler</h3>
        <p class="heading-btm-w3ls">Tarımsal sektörde son gelişmeler...</p>
        @foreach (var item in Model)
            {
                @if (@item.AnnouncementId % 2 == 0)
                {
                    <div class="blog-grid-w3-agileits">
                        <div class=" col-md-7 blog-img1-agileits-w3layouts">
                            <a href="#" data-toggle="modal" data-target="#myModal2"></a>
                        </div>
                        <div class=" col-md-5 blog-info-w3layouts">
                            <h6> <a href="#" data-toggle="modal" data-target="#myModal2">@item.Title</a></h6>
                            <div class="inner-info">
                                <a href="#" class="blog-text-w3ls bar">Lorem ipsum.</a><span>@item.Date.Date</span>
                                <p class="para-w3-agileits">@item.Description</p>
                            </div>
                            <a href="#" class="blog-more-agile" data-toggle="modal" data-target="#myModal2">Daha fazla</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                }
                else
                {
                    <div class="blog-grid-w3-agileits">
                        <div class=" col-md-5 blog-info-w3layouts blog-mid">
                            <h6><a  href="#" data-toggle="modal" data-target="#myModal3">@item.Title</a></h6>
                            <div class="inner-info-mid">
                                <a href="#" class="blog-text-w3ls mid-bar">Lorem ipsum.</a><span>@item.Date.Date</span>
                                <p class="para-w3-agileits">@item.Description</p>
                            </div>
                            <a  href="#" class="blog-more-agile" data-toggle="modal" data-target="#myModal3">Daha fazla</a>
                        </div>
                        <div class=" col-md-7 blog-img2-agileits-w3layouts">
                            <a  href="#" data-toggle="modal" data-target="#myModal3"></a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                }
            }
        </div>
    </div>