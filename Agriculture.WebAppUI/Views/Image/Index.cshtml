@using Agriculture.Entities.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Listesi</h4>
            <p class="card-description">
                Görseller
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ImageId</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td><a href="/Image/DeleteImage/@item.ImageId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Image/UpdateImage/@item.ImageId" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }
                    </tbody>
                </table>
                <a href="/Image/AddImage/" class="btn btn-outline-primary mt-3">Görsel Ekle</a>
            </div>
        </div>
    </div>
</div>

