@model Agriculture.Entities.Concrete.Image
@{
    ViewData["Title"] = "DeleteImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Silme Paneli</h4>
            <form method="post" class="forms-sample">
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.Label("ID")
                        <span asp-validation-for="ImageId" class="text-danger"></span>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" enabled="false" asp-for="ImageId" class="form-control" id="exampleInputUsername2">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.Label("Başlık")
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Title" class="form-control" id="exampleInputUsername2" disabled="true">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.Label("Açıklama")
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-sm-9">
                        <textarea asp-for="Description" class="form-control" rows="10" disabled="true"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-danger me-2">Sil</button>
                <a href="/Image/Index/" class="btn btn-outline-info">Vazgeç</a>
            </form>
        </div>
    </div>
</div>

