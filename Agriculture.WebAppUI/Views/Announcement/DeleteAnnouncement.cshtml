@model Agriculture.Entities.Concrete.Announcement
@{
    ViewData["Title"] = "DeleteAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Silme Paneli</h4>
            <form method="post" class="forms-sample">
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.Label("ID")
                        <span asp-validation-for="AnnouncementId" class="text-danger"></span>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" enabled="false" asp-for="AnnouncementId" class="form-control" id="exampleInputUsername2">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.Label("Başlık")
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Title" class="form-control" id="exampleInputUsername2" disabled="true">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.Label("Açıklama")
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Description" class="form-control" id="exampleInputUsername2" disabled="true">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.Label("Tarih")
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="col-sm-9">
                        <input type="date" asp-for="Date" class="form-control" id="exampleInputUsername2" disabled="true">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.Label("Durumu")
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="col-sm-9">
                        <div class="row">
                            <div class="col-sm-3">
                                <input type="radio" asp-for="Status" class="radio-inline" value="True">Aktif
                            </div>
                            <div class="col-sm-9">
                                <input type="radio" asp-for="Status" class="radio-inline" value="False">Pasif
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-danger me-2">Sil</button>
                <a href="/Announcement/Index/" class="btn btn-outline-info">Vazgeç</a>
            </form>
        </div>
    </div>
</div>
